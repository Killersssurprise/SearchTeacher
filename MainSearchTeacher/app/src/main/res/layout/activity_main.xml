<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorDeepPurple"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_ptp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adminBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:onClick="goAdmin"
        android:text="Администратор"
        android:textColor="@color/colorPurple"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/studentBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:onClick="goStudent"
        android:text="Студент"
        android:textColor="@color/colorPurple"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/adminBtn"
        app:layout_constraintStart_toStartOf="@+id/adminBtn"
        app:layout_constraintTop_toBottomOf="@+id/adminBtn" />



</androidx.constraintlayout.widget.ConstraintLayout>